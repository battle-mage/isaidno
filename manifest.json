{
  "manifest_version": 3,
  "name": "Consent Checkbox Cleaner",
  "description": "Pick an element and uncheck all checked, interactable checkboxes within it.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_title": "Consent Checkbox Cleaner",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
